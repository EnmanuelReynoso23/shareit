{
  "name": "shareit",
  "version": "1.0.0",
  "description": "ShareIt - Aplicaci√≥n de compartir fotos y widgets colaborativos",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:web": "expo build:web",
    "publish": "expo publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "validate": "node validate-imports.js",
    "prestart": "npm run validate",
    "electron": "electron dist/electron/main.js",
    "electron:dev": "concurrently \"npm run build:electron:dev\" \"wait-on http://localhost:19006 && electron dist/electron/main.js\"",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:electron:dev": "tsc -p electron/tsconfig.json && cp electron/package.json dist/electron/",
    "package:electron": "npm run build:web && npm run build:electron && electron-builder",
    "dist:electron": "npm run package:electron",
    "postinstall": "npm run build:electron"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "11.4.1",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.3.29",
    "@reduxjs/toolkit": "^1.9.5",
    "bytes": "^3.1.2",
    "expo": "~53.0.0",
    "expo-camera": "~16.1.10",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "^14.1.5",
    "expo-location": "~18.1.6",
    "expo-media-library": "~17.1.7",
    "expo-permissions": "~14.2.1",
    "expo-status-bar": "~2.2.3",
    "firebase": "^10.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-paper": "^5.10.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-vector-icons": "^10.0.0",
    "react-native-web": "^0.20.0",
    "react-redux": "^8.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.0.10",
    "@types/react-native": "~0.72.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-updater": "^6.1.4",
    "eslint": "^8.45.0",
    "eslint-config-expo": "~9.2.0",
    "jest": "^29.6.2",
    "typescript": "^5.1.3",
    "wait-on": "^7.0.1"
  },
  "keywords": [
    "react-native",
    "expo",
    "firebase",
    "photos",
    "widgets",
    "collaboration",
    "social"
  ],
  "author": "ShareIt Team",
  "license": "MIT",
  "private": true,
  "expo": {
    "name": "ShareIt",
    "slug": "shareit-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shareit.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.shareit.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ShareIt to access your camera to take photos.",
          "microphonePermission": "Allow ShareIt to access your microphone for video recording.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow ShareIt to access your photos to save and share images.",
          "savePhotosPermission": "Allow ShareIt to save photos to your gallery.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ShareIt to use your location to add location data to photos."
        }
      ]
    ]
  },
  "build": {
    "appId": "com.shareit.app",
    "productName": "ShareIt",
    "directories": {
      "output": "dist/packages"
    },
    "files": [
      "dist/electron/**/*",
      "web-build/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
